<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvList"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_4"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/bg_data_list"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_4">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/txt_load"
                    android:textColor="@color/grey_100"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/margin_16"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_load"
                    android:textColor="@color/grey_100"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_4">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_ring"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_temperature"
                    android:textColor="@color/colorBlack" />

                <View
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_load"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"/>

                <View
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/txt_degree_celsius"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_4">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_ring"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_data_humidity"
                    android:textColor="@color/colorBlack" />

                <View
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_load"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"/>

                <View
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_percent"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_4">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_ring"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_data_humidity_p1"
                    android:textColor="@color/colorBlack" />

                <View
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_plot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_load"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"/>

                <View
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_percent"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_4">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_ring"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_data_humidity_p2"
                    android:textColor="@color/colorBlack" />

                <View
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tv_plot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_load"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"/>

                <View
                    android:layout_width="@dimen/margin_8"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_percent"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>